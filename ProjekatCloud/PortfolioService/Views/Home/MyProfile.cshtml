<h2>MyProfile</h2>
@model Common.User
@{
    ViewBag.Title = "Izmeni profil"; }
<h2>Moj profil</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Update", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>Student</legend>
        <table>

            <tr>
                <td>
                    <label>Name:</label>
                </td>
                <td>
                    <input value="@ViewBag.user.Name" type="text" name="Name" required />
                </td>
            </tr>
            <tr>
                <td>
                    <label>LastName:</label>
                </td>
                <td>
                    <input value="@ViewBag.user.LastName" type="text" name="LastName" required />
                </td>
            </tr>
            <tr>
                <td>
                    <label>Email:</label>
                </td>
                <td>
                    <input value="@ViewBag.user.RowKey" type="text" name="RowKey" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>Password:</label>
                </td>
                <td>
                    <input value="@ViewBag.user.Password" type="text" name="Password" readonly />
                </td>
            </tr>
            <tr>
                <td>
                    <label>Address:</label>
                </td>
                <td>
                    <input value="@ViewBag.user.Address" type="text" name="Address" required />
                </td>
            </tr>
            <tr>
                <td>
                    <label>City:</label>
                </td>
                <td>
                    <input value="@ViewBag.user.City" type="text" name="City" required />
                </td>
            <tr>
                <td>
                    <label>Country:</label>
                </td>
                <td>
                    <input value="@ViewBag.user.Country" type="text" name="Country" required />
                </td>
            <tr>
                <td>
                    <label>PhoneNumber:</label>
                </td>
                <td>
                    <input value="@ViewBag.user.PhoneNumber" type="text" name="PhoneNumber" required />
                </td>

            </tr>
            <tr>
                <td>
                    <label>Image:</label>
                </td>
                <td>
                    <img src="@Url.Content(ViewBag.user.PhotoUrl)" alt="User Photo" style="width: 50px; height: 50px;" />
                </td>
                <td>
                    <input type="file" id="studentPicture" name="file" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Update" />
                </td>
            </tr>
        </table>
    </fieldset>
}

